<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="Ivory" _name="Ivory" version="1.0">
    <author>Vasileios Apostolidis-Afentoulis | vaa@duck.com</author>
    <_description>Color scheme for Ivory color palette</_description>
  
    <!-- Ivory Colors -->
    <color name="Ivory_BG" value="#ffffff" />
    <color name="Ivory_FG" value="#1f1f1f" />
    <color name="Ivory_SELECTION" value="#c2e7ff" />
    <color name="Ivory_COMMENT" value="#957103" />
    <color name="Ivory_BLUE" value="#0737b2" />
    <color name="Ivory_GREEN" value="#297d24" />
    <color name="Ivory_ORANGE" value="#ba5f05" />
    <color name="Ivory_PINK" value="#fd3c6c" />
    <color name="Ivory_PURPLE" value="#5a07b5" />
    <color name="Ivory_RED" value="#b20707" />
    <color name="Ivory_YELLOW" value="#957103" />

    <color name="Ivory_BGLight" value="#c2e7ff" />

    <!-- Global Settings -->
    <style name="text"
           foreground="Ivory_FG"
           background="Ivory_BG" />
    <style name="selection"
           background="Ivory_BLUE" />
    <style name="cursor"
           foreground="Ivory_FG"/>
    <style name="secondary-cursor"
           foreground="Ivory_FG"/>
    <style name="current-line"
           background="Ivory_BGLight"/>
    <style name="line-numbers"
           foreground="Ivory_COMMENT"
           background="Ivory_BG" />
    <style name="background-pattern"
           background="Ivory_BG"/>

    <!-- Bracket Matching -->
    <style name="bracket-match"
           foreground="Ivory_FG"
           background="Ivory_SELECTION"/>
    <style name="bracket-mismatch"
           foreground="Ivory_RED"
           background="Ivory_SELECTION"/>

    <!-- Right Margin -->
    <style name="right-margin"
           foreground="Ivory_COMMENT"
           background="Ivory_BG"/>
    
    <!-- Search Matching -->
    <style name="search-match"
           foreground="Ivory_RED"
           background="Ivory_BGLight"/>

    <!-- Comments -->
    <style name="def:comment"
           foreground="Ivory_COMMENT"/>
    <style name="def:shebang"
           foreground="Ivory_COMMENT"
           bold="true"/>
    <style name="def:doc-comment-element"
           italic="true"/>

    <!-- Constants -->
    <style name="def:constant"
           foreground="Ivory_FG"/>
    <style name="def:special-char"
           foreground="Ivory_RED"/>
    <style name="def:number"
           foreground="Ivory_PURPLE" />

    <!-- Identifiers -->
    <style name="def:identifier"
           foreground="Ivory_RED"/>

    <!-- Statements -->
    <style name="def:statement"
           foreground="Ivory_RED"/>

    <!-- Types -->
    <style name="def:type"
           foreground="Ivory_BLUE"/>

    <!-- Operators -->
    <style name="def:operator"
           foreground="Ivory_RED"/>

    <!-- Others -->
    <style name="def:preprocessor"
           foreground="Ivory_RED"/>
    <style name="def:error"
           foreground="Ivory_RED"
           bold="true"/>
    <style name="def:note"
           foreground="Ivory_COMMENT"
           background="Ivory_FG"/>
    <style name="def:underlined"
           italic="true"
           underline="single"/>

</style-scheme>
